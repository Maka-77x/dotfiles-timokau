#!/usr/bin/env bash

TMPDIR=$(mktemp -d)
pushd "$TMPDIR" >/dev/null
nix-build '<nixpkgs>' -A sound-theme-freedesktop
SOUNDS_ROOT="$TMPDIR/result/share/sounds/freedesktop/stereo"
sound="$1"
volume="${2:-100}"
if [[ "$sound" == "list" ]]; then
	ls -l "$SOUNDS_ROOT"
else
	SOUND="${SOUNDS_ROOT}/${sound}.oga"
	mpv --volume="$volume" "$SOUND" >/dev/null 2>&1
fi
popd >/dev/null
rm -r "$TMPDIR"
