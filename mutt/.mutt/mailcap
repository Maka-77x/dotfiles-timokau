# MS Word documents
application/msword; libreoffice %s

# Text
text/plain; less %s

# Images
image/jpg; sxiv %s
image/jpeg; sxiv %s
image/pjpeg; sxiv %s
image/png; sxiv %s
image/gif; sxiv %s

# PDFs
application/pdf; zathura %s

# HTML
text/html; xdg-open %s & sleep 2 &> /dev/null &; x-neomutt-keep
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# Unidentified files
application/octet-stream;nvim %s

